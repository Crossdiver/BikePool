div(data-role='routes')
	div(data-role='header')
		h1 Join a Route
	
	div(data-role='content')
		#map_content(width='100%')
		h2 #{name}
			span(class='tiny') &nbsp;Check-In
		.tiny #{members} members
			span(class='soft') &#124;
			| Mon, Tue, Wed, Thu, Fri

	iframe(width="100%", height="400", frameborder="0", scrolling="no", marginheight="0", marginwidth="0", src="https://maps.google.com/maps?f=d&amp;source=s_d&amp;saddr=#{start}&amp;daddr=#{end}&amp;hl=en&amp;aq=0&amp;oq=manh&amp;mra=ls&amp;ie=UTF8&amp;t=m&amp;spn=0.13804,0.06633&amp;output=embed")

	ul(data-role="listview", style="padding-top: 30px;")
		-var count = 0;
		-for (var id in times)
				li(data-corners="false", data-shadow="false", data-iconshadow="true", data-wrapperels="div", data-icon="arrow-r", data-iconpos="right", data-theme="d")
					a(href='/routedetails') #{times[id].time}
					.thumbs
						-for(i=0; i<=5; i++) {
							-var avatarImage = avatars[count];
								img(src='#{avatarImage}', width='45px', height='45px')
						-if(count<=avatars.length){count++;}else{count=0;}
						-}

div(data-role='footer')
	a(href='about.html') About BikePool

input(type='hidden', id='start') #{start}
input(type='hidden', id='end') #{end}

